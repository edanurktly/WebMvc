@model ICollection<Category>


<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adi</th>
            <th>Aciklama </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>

                            <td>
            <a class="btn btn-primary" asp-action="Update" asp-controller="Category" asp-route-id="@item.CategoryId">Guncelle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.CategoryId">Sil</a>
                    </td>
                    </tr>
        }
    </tbody>


</table>
