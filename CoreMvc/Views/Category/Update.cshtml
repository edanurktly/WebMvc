@model Category


<div class="card">
    <div class="card-header">
        <h3>Yeni Firma</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="category" method="post">

            <input type="hidden" asp-for="@Model.CategoryId" />
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.CategoryName" class="form-label">Kategori Adi</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.CategoryName" placeholder="Kategori Adi">
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Description" class="form-label">Aciklama </label>
                    </div>
                    <div class="col-7">
                        <input type="text" placeholder="Aciklama"
                               class="form-control" asp-for="@Model.Description" />
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a type="button" class="btn btn-info" asp-action="Index" asp-controller="category">Geri Don</a>
            </div>
        </form>
    </div>
</div>